{
    "openapi": "3.0.0",
    "info": {
        "title": "User API",
        "version": "1.0.0",
        "description": "API для управления пользователями."
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Authentication operations"
        },
        {
            "name": "User",
            "description": "User operations"
        }
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": ["Auth"],
                "summary": "Аутентификация пользователя",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешный ответ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid",
                                            "example": "123e4567-e89b-12d3-a456-426614174000"
                                        },
                                        "first_name": {
                                            "type": "string",
                                            "example": "John"
                                        },
                                        "last_name": {
                                            "type": "string",
                                            "example": "Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@example.com"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "example": "+1234567890"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "your.jwt.token.here"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "first_name",
                                        "last_name",
                                        "email",
                                        "phone",
                                        "expires_in",
                                        "token"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "Создание пользователя",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegister"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Успешно",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "your.jwt.token.here"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users": {
            "get": {
                "tags": ["User"],
                "summary": "Получить список пользователей",
                "operationId": "getUsers",
                "parameters": [
                    {
                        "name": "phone",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Телефон пользователя."
                    },
                    {
                        "name": "last_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Фамилия пользователя."
                    },
                    {
                        "name": "first_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Имя пользователя."
                    },
                    {
                        "name": "middle_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Отчество пользователя."
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        },
                        "description": "Номер страницы."
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        },
                        "description": "Количество пользователей на странице."
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "json",
                                "xml"
                            ],
                            "default": "json"
                        },
                        "description": "Формат ответа."
                    },
                    {
                        "name": "created_at",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "description": "Дата создания пользователя.",
                        "example": "2025-05-08 или 2025-05-08 11:01:01"
                    },
                    {
                        "name": "sort_field",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Поле для сортировки.",
                        "example": "sort_field=last_name,desc"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешный ответ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/User"
                                            }
                                        },
                                        "perPage": {
                                            "type": "integer"
                                        },
                                        "currentPage": {
                                            "type": "integer"
                                        },
                                        "totalPages": {
                                            "type": "integer"
                                        },
                                        "totalUsers": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "email": {
                        "type": "string",
                        "maxLength": 80,
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string",
                        "maxLength": 20
                    },
                    "last_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "first_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "middle_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "required": [
                    "id",
                    "email",
                    "password",
                    "first_name",
                    "last_name"
                ]
            },
            "UserRegister": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 80
                    },
                    "password": {
                        "type": "string",
                        "minLength": 6
                    },
                    "password_confirmation": {
                        "type": "string",
                        "minLength": 6
                    },
                    "first_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "last_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "middle_name": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "phone": {
                        "type": "string",
                        "maxLength": 20
                    }
                },
                "required": [
                    "email",
                    "password",
                    "password_confirmation",
                    "first_name",
                    "last_name"
                ]
            }
        }
    }
}
